                    android:text="Забота о себе" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr13"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_home_appliances"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg13"
                    android:src="@drawable/home_appliances" />

                <TextView
                    android:id="@+id/txt13"
                    style="@style/bottomText"
                    android:text="Техника" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr14"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_pets"
                    style="@style/add_images"
