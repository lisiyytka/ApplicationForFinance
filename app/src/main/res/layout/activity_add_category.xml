                    android:src="@drawable/pets" />

                <TextView
                    android:id="@+id/txt14"
                    style="@style/bottomText"
                    android:text="Животные" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr15"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_relaxation"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg15"
                    android:src="@drawable/relaxation" />

                <TextView
                    android:id="@+id/txt15"
