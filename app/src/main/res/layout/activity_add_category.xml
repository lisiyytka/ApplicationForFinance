<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_arrow_white"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/category_text"/>
            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выберите категорию"
                android:textSize="25sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <LinearLayout
            android:id="@+id/icons"
            style="@style/linear_layout"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolBar">

            <LinearLayout
                android:id="@+id/ctgr1"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_supermarket"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg"
                    android:src="@drawable/supermarket" />

                <TextView
                    android:id="@+id/txt1"
                    style="@style/bottomText"
                    android:text="Продукты" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr2"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_cafe_food"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg2"
                    android:src="@drawable/cafe_food" />

                <TextView
                    android:id="@+id/txt2"
                    style="@style/bottomText"
                    android:text="Кафе" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr3"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_transport"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg3"
                    android:src="@drawable/transport" />

                <TextView
                    android:id="@+id/txt3"
                    style="@style/bottomText"
                    android:text="Транспорт" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr4"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_health"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg4"
                    android:src="@drawable/health" />

                <TextView
                    android:id="@+id/txt4"
                    style="@style/bottomText"
                    android:text="Здоровье" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr5"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_clothes"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg5"
                    android:src="@drawable/clothes" />

                <TextView
                    android:id="@+id/txt5"
                    style="@style/bottomText"
                    android:text="Одежда" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr6"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_entertainment"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg6"
                    android:src="@drawable/entertainment" />

                <TextView
                    android:id="@+id/txt6"
                    style="@style/bottomText"
                    android:text="Досуг" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr7"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_house"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg7"
                    android:src="@drawable/house" />

                <TextView
                    android:id="@+id/txt7"
                    style="@style/bottomText"
                    android:text="Дом" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr8"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_petrol"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg8"
                    android:src="@drawable/petrol" />

                <TextView
                    android:id="@+id/txt8"
                    style="@style/bottomText"
                    android:text="Бензин" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr9"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_hobby"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg9"
                    android:src="@drawable/hobby" />

                <TextView
                    android:id="@+id/txt9"
                    style="@style/bottomText"
                    android:text="Хобби" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr10"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_car"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg10"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/txt10"
                    style="@style/bottomText"
                    android:text="Машина" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr11"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_cigarettes"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg11"
                    android:src="@drawable/cigarettes" />

                <TextView
                    android:id="@+id/txt11"
                    style="@style/bottomText"
                    android:text="Сигареты" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr12"
