                    android:text="Образование" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr17"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_sport"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg17"
                    android:src="@drawable/sport" />

                <TextView
                    android:id="@+id/txt17"
                    style="@style/bottomText"
                    android:text="Спорт" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr18"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_money"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg18"
                    android:src="@drawable/money" />

                <TextView
                    android:id="@+id/txt18"
                    style="@style/bottomText"
                    android:text="Платежи" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr19"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_unexpected_spending"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg19"
                    android:src="@drawable/unexpected_spending" />

                <TextView
                    android:id="@+id/txt19"
                    style="@style/bottomText"
                    android:text="Непредвиденные расходы" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctgr20"
                style="@style/linear_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_no_category"
                    style="@style/add_images"
                    android:background="@drawable/category_btn_bg20"
                    android:src="@drawable/no_category" />

                <TextView
                    android:id="@+id/txt20"
                    style="@style/bottomText"
                    android:text="Другое" />
            </LinearLayout>
            <LinearLayout
                style="@style/linear_layout"
                android:orientation="horizontal"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
